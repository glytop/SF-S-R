<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Limit_Of_Discount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(),  Discount_Percentage__c &gt; 0.1 )</errorConditionFormula>
    <errorMessage>Discount percent cannot exceed 10%</errorMessage>
</ValidationRule>
